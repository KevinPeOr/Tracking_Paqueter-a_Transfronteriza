<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title %></title>
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
  />
</head>
<body>
  <section class="section">
    <div class="container">
      <h1 class="title has-text-centered mb-6">Lista de Envíos</h1>

      <table class="table is-fullwidth is-striped is-hoverable">
        <thead>
          <tr>
            <th>ID</th>
            <th>Número de Guía</th>
            <th>Estado Actual</th>
            <th>Origen</th>
            <th>Destino</th>
          </tr>
        </thead>
        <tbody>
          <% if (envios.length > 0) { %>
            <% envios.forEach(envio => { %>
              <tr>
                <td><%= envio.id_envio || envio.id %></td>
                <td><%= envio.numero_guia %></td>
                <td><%= envio.estado_actual %></td>
                <td><%= envio.origen %></td>
                <td><%= envio.destino %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="5" class="has-text-centered">No hay envíos registrados.</td>
            </tr>
          <% } %>
        </tbody>
      </table>

      <div class="has-text-centered mt-5">
      </div>
    </div>
  </section>
</body>
</html>
